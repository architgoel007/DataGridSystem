<h6>Welcome to view</h6>

<table id="tbl_products" class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Sales</th>
            <th>Categorey</th>
            <th>SubCategorey</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $(document).ready(function () {

        LoadProducts();
    })

    function LoadProducts() {
        $.get('@Url.Action("GetProducts","Product")', function(result) {
             console.log(result)
            $("#tbl_products").DataTable({
                data: result,
                columns: [
                {"data": "id"},
                { "data": "title" },
                { "data": "quantity" },
                { "data": "price" },
                { "data": "sales" },
                { "data": "categ" },
                { "data": "subCateg" }
                ]
            })
        })
    }

</script>
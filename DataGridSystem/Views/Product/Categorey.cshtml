                //    columns: [
                //        { "data": "id" },
                //        { "data": "catname" }
                //    ]
                //})
            })
        });

    });
    function LoadCategory() {
            $.get('@Url.Action("GetCategorey", "Product")', function (result) {
                console.log(result)
                $("#tbl_categorey").DataTable({
                    data: result,
                    columns: [
                        { "data": "id" },
                        { "data": "catName" }
                    ]
                })
            })
        }
</script>